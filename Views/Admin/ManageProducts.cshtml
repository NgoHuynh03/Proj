@{
ViewBag.Title = "Manage Products";
}

<div class="container mt-4">
    <h2 class="mb-4">Manage Products</h2>

    <div class="card p-4 shadow-lg">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in ViewBag.Products)
            {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td> <!-- Display description -->
                <td>@product.Price</td>
                <td>@product.Quantity</td> <!-- Display quantity -->
                <td>@product.Category.Name</td>
                <td><img src="@product.ImagePath" width="50" height="50" class="img-thumbnail" /></td>
                <td>
                    <form asp-action="DeleteProduct" method="post">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>

    <a href="@Url.Action("AddProduct")" class="btn btn-success mt-3">
        <i class="fas fa-plus"></i> Add New Product
    </a>
</div>

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .table {
        margin-top: 20px;
    }

    .btn {
        border-radius: 4px;
        padding: 10px 15px;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    .img-thumbnail {
        border-radius: 4px;
    }

    .btn-sm {
        padding: 5px 10px;
    }

    .container {
        max-width: 1200px;
    }

    .btn i {
        margin-right: 5px;
    }
</style>
