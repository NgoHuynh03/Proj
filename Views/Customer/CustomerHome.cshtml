<style>
    
    body {
        background: #F8F9FA;
        font-family: 'Raleway', sans-serif  ;

    }

    /* Top Navbar */
    .top-navbar {
        background: linear-gradient(90deg, #007bff, #00c6ff);
        color: white;
        padding: 15px 0;
    }

    .brand-name {
        font-size: 1.5rem;
        font-weight: bold;
        color: #fff;
        text-transform: uppercase;
    }

    .top-navbar .input-group input {
        border-radius: 20px 0 0 20px;
        height: 35px;
        font-size: 14px;
    }

    .top-navbar .btn {
        border-radius: 0 20px 20px 0;
        padding: 10px 15px;
    }

    .top-navbar .nav-item {
        margin-left: 20px;
    }

    .top-navbar .nav-link {
        color: white;
        font-size: 14px;
        text-transform: uppercase;
    }

    .top-navbar .nav-link:hover {
        color: #00c6ff;
    }

    .dropdown-menu {
        background-color: #007bff;
        border: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .dropdown-item:hover {
        background-color: #00c6ff;
        color: white;
    }

    /* Sidebar */
    .sidebar {
        background-color: #f8f9fa;
        padding-top: 30px;
        border-right: 1px solid #ddd;
        height: 100vh;
        position: sticky;
        top: 0;
    }

    .sidebar h5 {
        font-size: 1.25rem;
        color: #007bff;
        margin-bottom: 20px;
    }

    .sidebar .list-group-item {
        padding: 12px 15px;
        border: none;
        background-color: transparent;
        transition: background-color 0.3s ease;
    }

    .sidebar .list-group-item:hover {
        background-color: #007bff;
        color: white;
    }

    .sidebar a {
        text-decoration: none;
        color: #212121;
    }

    .sidebar a:hover {
        color: #007bff;
    }

    /* Product Cards */
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden; /* Ensures that elements don't overflow outside the card */
        width: 100%; /* Ensures cards take up 100% of the available column width */
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
    }

    .card img {
        width: 100%; /* Makes sure the image fills the width of the card */
        height: 500px; /* Fixed height for images */
        object-fit: cover; /* Ensures the image is properly cropped */
    }

    .card-body {
        text-align: center;
        padding: 20px;
    }

    .card-title {
        font-size: 18px;
        font-weight: 600;
        color: #212121;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 16px;
        color: #212121;
        font-weight: 500;
        margin-bottom: 20px;
    }


    .btn.details {
        background-color: #007bff;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .btn.details:hover {
        background-color: #00c6ff;
    }

    .btn.cart {
        background-color: #212121;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: bold;
        text-transform: uppercase;
        margin-top: 15px;
        transition: background-color 0.3s ease;
    }

    .btn.cart:hover {
        background-color: #00c6ff;
    }

    /* Pagination */
    .pagination-container {
        margin-top: 30px;
        text-align: center;
    }

    .pagination .page-link {
        background-color: transparent;
        border: 1px solid #007bff;
        color: #007bff;
        font-weight: bold;
        padding: 8px 15px;
        border-radius: 20px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .pagination .page-link:hover {
        background-color: #007bff;
        color: white;
    }
    .search-input {
        border-radius: 50px; /* Make input field rounded */
        height: 40px;
        font-size: 16px;
        padding-left: 25px; /* Space for the icon */
        border: 1px solid #007bff;
        transition: border-color 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: #00c6ff;
    }

    .search-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background-color: transparent;
        border: none;
        color: #007bff;
        font-size: 18px;
        cursor: pointer;
        transition: color 0.3s ease;
    }

    .search-btn:hover {
        color: #00c6ff;
    }

    /* Align the input and icon properly */
    .input-group {
        position: relative;
        width: 100%;
    }

    .pagination .active .page-link {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    /* Responsive */
    @@media (max-width: 767px) {
        .top-navbar {
            padding: 10px 0;
        }

        .sidebar {
            display: none;
        }

        .container-fluid {
            padding: 10px;
        }
    }

    @@media (min-width: 768px) {
        .container-fluid {
            padding: 30px;
        }
    }
</style>

<!-- Top Navbar -->
<div class="main-navbar shadow-sm sticky-top">
    <div class="top-navbar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 my-auto d-none d-sm-none d-md-block d-lg-block">
                    <h5 class="brand-name">Shopping</h5>
                </div>
                <div class="col-md-5 my-auto">
                    <form method="get" action="@Url.Action("CustomerHome", "Customer")">
                        <div class="input-group">
                            <input type="search" name="search" placeholder="Search your product" class="form-control search-input" value="@ViewBag.SearchTerm" />
                            <button class="search-btn" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <div class="col-md-5 my-auto">
                    <ul class="nav justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Customer/Cart">
                                <i class="fa fa-shopping-cart"></i> Cart
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Customer/OrderHistory">
                                <i class="fa fa-history"></i> Order History
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#x" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user"></i> @ViewBag.UserName
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" id="x">
                                <li><a class="dropdown-item" href="/Account/UpdateProfile"> Profile</a></li>
                                <li><a class="dropdown-item" href="/Account/Logout">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sidebar with Categories -->
<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left Sidebar -->
        <div class="col-md-3 col-lg-2 p-3 sidebar bg-light">
            <h5 class="font-weight-bold">Danh Mục Sản Phẩm</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="@Url.Action("CustomerHome", "Customer")">Tất cả</a>
                </li>
                @foreach (var category in ViewBag.Categories as List<Proj.Models.Category>)
                {
                <li class="list-group-item">
                    <a href="@Url.Action("CustomerHome", "Customer", new { categoryId = category.Id })">@category.Name</a>
                </li>
                }
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-9 col-lg-10 p-4">
            <h2 class="text-center mb-4">Sản phẩm có sẵn</h2>
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                @foreach (var product in Model)
                { 
<div class="col">
    <div class="card shadow-sm border-light rounded position-relative">
        <!-- Stock Status -->
        @if (product.Quantity == 0)
        {
            <span class="badge position-absolute top-0 end-0 m-2 bg-danger text-white">Out of Stock</span>
        }
        else if (product.Quantity == 1)
        {
            <span class="badge position-absolute top-0 end-0 m-2 bg-warning text-dark">Last Product</span>
        }
        else
        {
            <span class="badge position-absolute top-0 end-0 m-2 bg-success text-white">In Stock</span>
        }

        <!-- Product Image -->
        <img src="@product.ImagePath" class="card-img-top rounded-top" alt="@product.Name" style="height: 400px; object-fit: cover;">

        <div class="card-body">
            <!-- Product Name -->
            <h5 class="card-title text-truncate" title="@product.Name">@product.Name</h5>

            <!-- Product Description -->
            <p class="card-text text-muted" style="font-size: 0.85rem; height: 45px; overflow: hidden; text-overflow: ellipsis;">
                @if (product.Description.Length > 100)
                {
                    @product.Description.Substring(0, 100) 
                }
                else
                {
                    @product.Description
                }
            </p>

            <!-- Price -->
            <p class="card-text">
                <span class="fw-bold text-primary">Price: </span> $@product.Price
            </p>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <!-- View Details Button -->
                <a href="@Url.Action("ConsultProduct", "Customer", new { id = product.Id })" 
                   class="btn btn-outline-primary btn-sm me-2 flex-grow-1 text-center">
                    View Details
                </a>

                <!-- Add to Cart Button -->
                @if (product.Quantity > 0)
                {
                    <form asp-action="AddToCart" asp-controller="Customer" method="post" class="flex-grow-1">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-success btn-sm w-100">Add to Cart</button>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary btn-sm flex-grow-1 text-center" disabled>Add to Cart</button>
                }
            </div>
        </div>
    </div>
</div>


                }
            </div>

            <!-- Pagination -->
            <div class="pagination-container">
                <ul class="pagination">
                    @if (ViewBag.CurrentPage > 1)
                    {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("CustomerHome", "Customer", new { page = ViewBag.CurrentPage - 1, search = ViewBag.SearchTerm, categoryId = ViewBag.SelectedCategoryId })">Previous</a>
                    </li>
                    }
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("CustomerHome", "Customer", new { page = i, search = ViewBag.SearchTerm, categoryId = ViewBag.SelectedCategoryId })">@i</a>
                    </li>
                    }
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("CustomerHome", "Customer", new { page = ViewBag.CurrentPage + 1, search = ViewBag.SearchTerm, categoryId = ViewBag.SelectedCategoryId })">Next</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

